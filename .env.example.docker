# Environment Variables for Docker Compose
# Copy this file to .env and fill in the values
# Used by: DOCKER-COMPOSE-LOCAL-DEVELOPMENT.yml and DOCKER-COMPOSE-PRODUCTION.yml

# ============================================================
# DISCORD BOT CONFIGURATION
# ============================================================
# Get these from Discord Developer Portal: https://discord.com/developers/applications
DISCORD_TOKEN=your_bot_token_here
CLIENT_ID=your_client_id_here
GUILD_ID=optional_test_guild_id_for_faster_registration

# ============================================================
# DISCORD OAUTH CONFIGURATION (Dashboard)
# ============================================================
# Get these from Discord Developer Portal OAuth2 settings
DISCORD_CLIENT_SECRET=your_discord_client_secret_here
OAUTH_REDIRECT_URI=http://localhost:8080/oauth/callback

# ============================================================
# DATABASE CONFIGURATION
# ============================================================
# For Production: Use PostgreSQL
DB_USER=verabot
DB_PASSWORD=choose_a_strong_password_here
DB_NAME=verabot

# ============================================================
# REDIS CONFIGURATION
# ============================================================
REDIS_PASSWORD=choose_a_strong_redis_password_here

# ============================================================
# SECURITY KEYS (Production Only)
# ============================================================
SESSION_SECRET=generate_a_random_session_secret_using_crypto_randomBytes
JWT_SECRET=generate_a_random_jwt_secret_using_crypto_randomBytes

# ============================================================
# DOMAIN CONFIGURATION (Production Only)
# ============================================================
DOMAIN=yourdomain.com

# ============================================================
# MONITORING & ERROR TRACKING (Optional)
# ============================================================
SENTRY_DSN=optional_sentry_error_tracking_dsn
DATADOG_API_KEY=optional_datadog_monitoring_key

# ============================================================
# OPTIONAL EXTERNAL SERVICES
# ============================================================
# HuggingFace for AI poem generation
HUGGINGFACE_API_KEY=optional_huggingface_api_key

# ============================================================
# LOGGING
# ============================================================
LOG_LEVEL=info
DEBUG=verabot:*
