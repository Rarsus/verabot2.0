#!/bin/sh
# Pre-commit hook: Run linter and documentation link validator before commit
# Tests are run in CI to avoid blocking development

echo "ğŸ” Running pre-commit checks..."
echo ""

echo "ğŸ“ Linting code..."
# NOTE: max-warnings temporarily set to 800 while addressing accumulated warnings
# These are primarily from test files with complex scenarios (nested callbacks, large functions)
# and legitimate security/complexity warnings in production code.
# Goal: Reduce to <100 warnings and improve test organization
npm run lint -- --max-warnings=800
if [ $? -ne 0 ]; then
  echo "âŒ Linting failed. Commit aborted."
  echo "Run 'npm run lint:fix' to auto-fix issues."
  exit 1
fi

echo ""
echo "ğŸ”— Validating documentation links..."
npm run validate:links
if [ $? -ne 0 ]; then
  echo "âŒ Documentation links are broken. Please fix them or update references."
  exit 1
fi

echo ""
echo "âœ… All checks passed. Proceeding with commit."
exit 0
