{
  "name": "verabot2.0",
  "version": "2.10.0",
  "description": "Vera bot for Discord",
  "main": "index.js",
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon index.js",
    "register-commands": "node src/register-commands.js",
    "test": "node tests/unit/test-all.js",
    "test:all": "node tests/unit/test-all.js",
    "test:quick": "node tests/unit/run-tests.js",
    "test:coverage": "c8 npm test",
    "test:security": "node tests/unit/test-security-validation.js",
    "test:integration": "node tests/integration/test-security-integration.js",
    "test:workflows": "node tests/test-github-actions-scripts.js",
    "test:cache": "node tests/unit/test-cache-manager.js",
    "test:pool": "node tests/unit/test-database-pool.js",
    "test:query-builder": "node tests/unit/test-query-builder.js",
    "coverage:report": "c8 report",
    "coverage:check": "c8 check-coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:check": "eslint .",
    "security:audit": "npm audit --audit-level=moderate",
    "security:check": "npm run security:audit && npm run lint",
    "docs:lint": "echo 'Markdown linting skipped - markdownlint-cli not installed'",
    "docs:links": "node scripts/validation/check-links.js",
    "docs:version": "node scripts/validation/check-version.js",
    "docs:badges": "node scripts/validation/update-badges.js",
    "test:docs:update": "node scripts/update-test-docs.js",
    "db:migrate": "node scripts/db/migrate.js",
    "db:migrate:status": "node scripts/db/migrate-status.js",
    "db:rollback": "node scripts/db/rollback.js",
    "perf:monitor": "node scripts/performance/show-metrics.js",
    "release": "semantic-release",
    "release:dry": "semantic-release --dry-run",
    "release:check": "node scripts/validation/check-version.js",
    "prepare": "husky || true"
  },
  "keywords": [
    "discord",
    "bot"
  ],
  "author": "Rarsus",
  "license": "MIT",
  "dependencies": {
    "discord.js": "^14.0.0",
    "dotenv": "^16.0.3",
    "node-fetch": "^2.6.9",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^12.0.2",
    "c8": "^7.13.0",
    "eslint": "^9.0.0",
    "eslint-plugin-security": "^3.0.0",
    "husky": "^9.0.0",
    "lint-staged": "^15.0.0",
    "mocha": "^10.2.0",
    "nodemon": "^3.0.1",
    "semantic-release": "^25.0.2"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  }
}
