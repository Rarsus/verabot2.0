{
  "name": "verabot-utils",
  "version": "1.0.0",
  "description": "Shared utilities and services library for Verabot - Database, logging, validation, and common helpers",
  "main": "src/index.js",
  "type": "commonjs",
  "exports": {
    ".": "./src/index.js",
    "./services": "./src/services/index.js",
    "./services/DatabaseService": "./src/services/DatabaseService.js",
    "./services/GuildAwareDatabaseService": "./src/services/GuildAwareDatabaseService.js",
    "./services/ValidationService": "./src/services/ValidationService.js",
    "./middleware": "./src/middleware/index.js",
    "./middleware/errorHandler": "./src/middleware/errorHandler.js",
    "./middleware/logger": "./src/middleware/logger.js",
    "./helpers": "./src/helpers/index.js",
    "./helpers/response-helpers": "./src/helpers/response-helpers.js",
    "./helpers/api-helpers": "./src/helpers/api-helpers.js",
    "./types": "./src/types/index.d.ts"
  },
  "scripts": {
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:only": "jest --testNamePattern",
    "coverage": "jest --coverage",
    "coverage:open": "jest --coverage && open coverage/lcov-report/index.html",
    "lint": "eslint src tests",
    "lint:fix": "eslint src tests --fix",
    "format": "prettier --write \"src/**/*.js\" \"tests/**/*.js\"",
    "validate": "npm run lint && npm run test",
    "build": "npm run validate",
    "prepublishOnly": "npm run validate",
    "version": "npm run lint:fix",
    "postversion": "git push && git push --tags"
  },
  "keywords": [
    "discord",
    "bot",
    "utilities",
    "database",
    "logging",
    "validation",
    "helpers"
  ],
  "author": "Rarsus",
  "license": "MIT",
  "dependencies": {
    "dotenv": "^17.2.3",
    "sqlite3": "^5.1.7",
    "pg": "^8.11.2",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/pg": "^8.10.7",
    "eslint": "^8.48.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.7.0",
    "prettier": "^3.0.3"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Rarsus/verabot-utils.git"
  },
  "bugs": {
    "url": "https://github.com/Rarsus/verabot-utils/issues"
  },
  "homepage": "https://github.com/Rarsus/verabot-utils#readme",
  "publishConfig": {
    "access": "public"
  }
}
