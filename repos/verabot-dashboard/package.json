{
  "name": "verabot-dashboard",
  "version": "1.0.0",
  "description": "Web dashboard and admin interface for Verabot - Discord bot management",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon --exec node src/index.js",
    "test": "node --experimental-vm-modules ./node_modules/jest/bin/jest.js --coverage",
    "test:watch": "node --experimental-vm-modules ./node_modules/jest/bin/jest.js --watch",
    "test:only": "node --experimental-vm-modules ./node_modules/jest/bin/jest.js --testNamePattern",
    "coverage": "node --experimental-vm-modules ./node_modules/jest/bin/jest.js --coverage",
    "coverage:open": "node --experimental-vm-modules ./node_modules/jest/bin/jest.js --coverage && open coverage/lcov-report/index.html",
    "lint": "eslint src tests",
    "lint:fix": "eslint src tests --fix",
    "format": "prettier --write \"src/**/*.js\" \"tests/**/*.js\"",
    "validate": "npm run lint && npm run test",
    "health-check": "curl -f http://localhost:8080/health || echo 'Dashboard not responding'",
    "docker:build": "docker build -t verabot-dashboard:latest .",
    "docker:build:dev": "docker build -t verabot-dashboard:dev -f Dockerfile.dev .",
    "docker:run": "docker run -p 8080:8080 --env-file .env verabot-dashboard:latest",
    "docker:run:dev": "docker run -p 8080:8080 --env-file .env -v $(pwd)/src:/app/src verabot-dashboard:dev"
  },
  "keywords": [
    "discord",
    "dashboard",
    "admin",
    "oauth",
    "express"
  ],
  "author": "Rarsus",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.5.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^4.18.2",
    "express-session": "^1.17.3",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "passport": "^0.7.0",
    "passport-discord": "^0.1.4",
    "verabot-utils": "file:../verabot-utils"
  },
  "devDependencies": {
    "@jest/globals": "^30.2.0",
    "@types/jest": "^29.5.0",
    "eslint": "^8.48.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.3",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Rarsus/verabot-dashboard.git"
  },
  "bugs": {
    "url": "https://github.com/Rarsus/verabot-dashboard/issues"
  },
  "homepage": "https://github.com/Rarsus/verabot-dashboard#readme"
}
