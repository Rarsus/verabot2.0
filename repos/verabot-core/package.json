{
  "name": "verabot-core",
  "version": "1.0.0",
  "description": "Core bot infrastructure for Verabot - Base classes, services, and helpers for Discord bot development",
  "main": "src/index.js",
  "type": "commonjs",
  "exports": {
    ".": "./src/index.js",
    "./core": "./src/core/index.js",
    "./core/CommandBase": "./src/core/CommandBase.js",
    "./core/CommandOptions": "./src/core/CommandOptions.js",
    "./core/EventBase": "./src/core/EventBase.js",
    "./services": "./src/services/index.js",
    "./services/DatabaseService": "./src/services/DatabaseService.js",
    "./services/GuildAwareDatabaseService": "./src/services/GuildAwareDatabaseService.js",
    "./services/GuildDatabaseManager": "./src/services/GuildDatabaseManager.js",
    "./services/DiscordService": "./src/services/DiscordService.js",
    "./services/ValidationService": "./src/services/ValidationService.js",
    "./services/RolePermissionService": "./src/services/RolePermissionService.js",
    "./helpers": "./src/helpers/index.js",
    "./helpers/response-helpers": "./src/helpers/response-helpers.js",
    "./helpers/api-helpers": "./src/helpers/api-helpers.js"
  },
  "scripts": {
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:only": "jest --testNamePattern",
    "test:specific": "jest",
    "coverage": "jest --coverage",
    "coverage:validate": "jest --coverage",
    "lint": "eslint src tests",
    "lint:fix": "eslint src tests --fix",
    "format": "prettier --write \"src/**/*.js\" \"tests/**/*.js\"",
    "validate": "npm run lint && npm run test",
    "build": "npm run validate",
    "prepublishOnly": "npm run validate",
    "version": "npm run lint:fix",
    "postversion": "git push && git push --tags"
  },
  "keywords": [
    "discord",
    "bot",
    "discord.js",
    "slash-commands",
    "prefix-commands",
    "command-base",
    "event-handler"
  ],
  "author": "Rarsus",
  "license": "MIT",
  "dependencies": {
    "discord.js": "^14.11.0",
    "dotenv": "^17.2.3",
    "verabot-utils": "file:../verabot-utils"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "eslint": "^8.48.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-security": "^1.7.1",
    "jest": "^29.7.0",
    "prettier": "^3.0.3"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Rarsus/verabot-core.git"
  },
  "bugs": {
    "url": "https://github.com/Rarsus/verabot-core/issues"
  },
  "homepage": "https://github.com/Rarsus/verabot-core#readme",
  "publishConfig": {
    "access": "public"
  }
}
