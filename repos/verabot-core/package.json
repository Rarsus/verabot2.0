{
  "name": "verabot-core",
  "version": "1.0.0",
  "description": "Core bot functionality for Verabot - Discord bot with advanced command handling and event processing",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon --exec node src/index.js",
    "register-commands": "node src/register-commands.js",
    "register-commands:guild": "GUILD_ID=$GUILD_ID node src/register-commands.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:only": "jest --testNamePattern",
    "test:specific": "jest",
    "coverage": "jest --coverage",
    "coverage:open": "jest --coverage && open coverage/lcov-report/index.html",
    "lint": "eslint src tests",
    "lint:fix": "eslint src tests --fix",
    "format": "prettier --write \"src/**/*.js\" \"tests/**/*.js\"",
    "validate": "npm run lint && npm run test",
    "health-check": "curl -f http://localhost:3001/health || echo 'Bot not responding'",
    "docker:build": "docker build -t verabot-core:latest .",
    "docker:build:dev": "docker build -t verabot-core:dev -f Dockerfile.dev .",
    "docker:run": "docker run --env-file .env verabot-core:latest",
    "docker:run:dev": "docker run --env-file .env -v $(pwd)/src:/app/src verabot-core:dev"
  },
  "keywords": [
    "discord",
    "bot",
    "discord.js",
    "slash-commands",
    "prefix-commands"
  ],
  "author": "Rarsus",
  "license": "MIT",
  "dependencies": {
    "discord.js": "^14.11.0",
    "dotenv": "^17.2.3",
    "verabot-utils": "^1.0.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "eslint": "^8.48.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.3"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Rarsus/verabot-core.git"
  },
  "bugs": {
    "url": "https://github.com/Rarsus/verabot-core/issues"
  },
  "homepage": "https://github.com/Rarsus/verabot-core#readme"
}
