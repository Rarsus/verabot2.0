{
  "reporter": [
    "text",
    "html",
    "lcov"
  ],
  "report-dir": "./coverage",
  "exclude": [
    "tests/**",
    "node_modules/**",
    "coverage/**",
    "**/*.test.js",
    "**/*.spec.js"
  ],
  "check-coverage": true,
  "lines": 70,
  "functions": 70,
  "branches": 65,
  "statements": 70,
  "per-file": false,
  "all": true,
  "include": [
    "src/**/*.js"
  ]
}
